<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center"
    tools:context=".DictActivity">




    <Spinner
        android:id="@+id/spin_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/spinwords"></Spinner>

    <TextView
        android:id="@+id/theWord"
        android:text="The word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <ListView
        android:id="@+id/word_list"
        android:layout_width="match_parent"
        android:layout_height="422dp"></ListView>

    <TextView
        android:id="@+id/mytextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Defn"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:fontFamily="sans-serif-condensed" />

    <Button
        android:text="Add a word"
        android:onClick="addWordClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>